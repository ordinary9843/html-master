{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "no-trailing-spaces": 2,
    "no-multi-spaces": 2,
    "quotes": [2, "double"],
    "semi": [2, "always"],
    "comma-dangle": [2, "always-multiline"],
    "indent": [2, 2],
    "brace-style": [2, "1tbs"],
    "no-var": 2,
    "prefer-const": 2,
    "arrow-spacing": [2, { "before": true, "after": true }]
  }
}